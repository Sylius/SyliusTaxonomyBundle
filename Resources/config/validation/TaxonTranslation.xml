<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">
    <class name="Sylius\Component\Taxonomy\Model\TaxonTranslation">
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">
                <value>locale</value>
                <value>translatable</value>
            </option>
            <option name="groups">sylius</option>
            <option name="message">sylius.translation.locale.unique</option>
        </constraint>
        <property name="name">
            <constraint name="NotBlank">
                <option name="message">sylius.taxon.name.not_blank</option>
                <option name="groups">sylius</option>
            </constraint>
            <constraint name="Length">
                <option name="max">255</option>
                <option name="maxMessage">sylius.taxon.name.max_length</option>
                <option name="groups">sylius</option>
            </constraint>
        </property>
        <property name="slug">
            <constraint name="NotBlank">
                <option name="message">sylius.taxon.slug.not_blank</option>
                <option name="groups">sylius</option>
            </constraint>
        </property>
        <property name="locale">
            <constraint name="NotBlank">
                <option name="groups">sylius</option>
                <option name="message">sylius.translation.locale.not_blank</option>
            </constraint>
            <constraint name="Locale">
                <option name="groups">sylius</option>
                <option name="message">sylius.translation.locale.invalid</option>
            </constraint>
        </property>
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">
                <value>locale</value>
                <value>slug</value>
            </option>
            <option name="errorPath">slug</option>
            <option name="message">sylius.taxon.slug.unique</option>
            <option name="groups">sylius</option>
        </constraint>
    </class>
</constraint-mapping>
